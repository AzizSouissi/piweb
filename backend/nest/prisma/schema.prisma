generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId     String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  lastName   String
  email      String   @unique
  taskIDs String[]   @db.ObjectId
  tasks      Task[]   @relation(fields: [taskIDs], references: [taskId])
}

model Task {
  taskId      String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  priority    TaskPriority
  status      TaskStatus
  createBy    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  usersIDs String[] @db.ObjectId
  users User[]   @relation(fields: [usersIDs], references: [userId])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

